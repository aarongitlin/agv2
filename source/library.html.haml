---
title: Aaron's Library
body_class: library-index
layout: library_layout
---

.wrapper
  .page-title My Library
  .page-description
    = data.library.page_description

  .book__hero
    - data.library.books.each do |book|
      - if book.rank == 'zero'
        .book-hero
          .book-hero__image
            = image_tag book.image
          .book-hero__info
            .book-hero__title
              = book.title
              -# =link_to data.library.books[0]["title"], "/books/#{data.library.books[0]['slug']}.html"
            .book-hero__author= book.author
            .book-hero__short-description= book.short_description

  .space-one
    - data.library.books.each do |book|
      - if book.rank == 'one'
        .space-one__book__image
          = image_tag book.image
        .space-one__book__info
          .space-one__book__title
            = book.title
            -#= link_to book.title, "/books/#{book.slug}.html"
          .space-one__book__author= book.author
          .space-one__book__short-description= book.short_description
  
  .space-two
    - data.library.books.each do |book|
      - if book.rank == 'two'
        .space-two__book
          .space-two__book__image
            = image_tag book.image
          .space-two__book__info
            .space-two__book__title
              = book.title
              -#= link_to book.title, "/books/#{book.slug}.html"
            .space-two__book__author= book.author
            -# .book__short-description= book.short_description

      - if book.rank == 'three'
        .rank-three
          .rank-three__image
            = image_tag book.image

