---
title: Aaron's Library
body_class: library-index
---

.wrapper
  .page-title My Library
  .page-description
    = data.library.page_description
  .book__grid
    .book.book--hero
      .book__image
        = image_tag data.library.books[0]["image"]
      .book__info
        .book__title
          = data.library.books[0]["title"]
          -# =link_to data.library.books[0]["title"], "/books/#{data.library.books[0]['slug']}.html"

        .book__author= data.library.books[0]["author"]
        .book__short-description= data.library.books[0]["short_description"]

    - data.library.books[1..3].each do |book|
      %div{:class => "book"}
        .book__image
          = image_tag book.image
        .book__info
          .book__title
            = book.title
            -#= link_to book.title, "/books/#{book.slug}.html"
          .book__author= book.author
    - data.library.books[4..-1].each do |book|
      %div{:class => "book #{book.space}"}
        .book__image
          = image_tag book.image
        .book__info
          .book__title
            = book.title
            -#= link_to book.title, "/books/#{book.slug}.html"
          .book__author= book.author
